<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
          <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#"><b>what TO eat</b></a>
          </div>
        <!-- mobile navbar -->
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("About", "About", "Home")</li>
              <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
          </ul>
        </div>
        <!--mobile navbar end -->
      </div>
    </div>
    <!-- fixed navbar end-->
    <div id="Browseheader">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    @using (Html.BeginForm("Find", "Search", FormMethod.Get, new { @class = "form-inline" }))
                    {
                        <div class="form-group">
                            <input type="text" name="where" class="form-control input-lg mySize" placeholder="Search by City, Province, Street, etc." />
                        </div>
                        <button type="submit" class="btn btn-success btn-lg main">Search</button>
                    }
                </div>
            </div>
            <!-- row end -->
        </div><!-- container end -->
        </div>    
    <div class="wrapper">
        <div class="mainContainer">
            <div>
                <!-- search results from view-->
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- Bootstrap Core JavaScript -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
</body>
</html>
